                    <div class="reveal" style="margin-top:10px;">
                      <pre id="reportOut">Report will appear here.</pre>
                    </div>
                    <p class="mini printOnly">Printed report</p>
                  </div>
                </div>
              </div>
            </div>
          </div>

        </div><!-- /grid -->
      </div><!-- /card -->
    </div><!-- /grid -->
  </div><!-- /wrap -->

  <script>
    // ---------- Utilities ----------
    const $ = (id) => document.getElementById(id);
    const norm = (s) => String(s ?? "").trim();
    const asInt = (s) => {
      const t = norm(s).replace(/,/g,"");
      if(!t) return null;
      if(!/^[-]?\d+$/.test(t)) return null;
      return parseInt(t,10);
    };
    const comma = (n) => {
      const s = String(n);
      const sign = s.startsWith("-") ? "-" : "";
      const t = sign ? s.slice(1) : s;
      return sign + t.replace(/\B(?=(\d{3})+(?!\d))/g, ",");
    };

    // ---------- Parser (ONLY for this curriculum problem type) ----------
    // Accept either:
    // 1) Word-problem text with "times" + a miles number (+ optional "Let g be...")
    // 2) A multiplication/equation like "g = 6√ó600" or "6 x 600"
    function parseEquationWordProblem(raw){
      const text = norm(raw);
      if(!text) return null;

      // Try equation form first: "g = 6x600" or "6x600"
      const compact = text
        .replace(/√ó/g,"x")
        .replace(/\*/g,"x");

      let varName = null;
      const letMatch = compact.match(/\blet\s+([a-z])\b/i);
      if(letMatch) varName = letMatch[1].toLowerCase();

      const eqMatch = compact.match(/\b([a-z])\s*=\s*(\d+)\s*x\s*(\d+)\b/i);
      if(eqMatch){
        return {
          varName: (eqMatch[1] || "g").toLowerCase(),
          times: parseInt(eqMatch[2],10),
          known: parseInt(eqMatch[3],10),
          rawText: text
        };
      }

      const multMatch = compact.match(/\b(\d+)\s*x\s*(\d+)\b/i);
      if(multMatch){
        return {
          varName: (varName || "g"),
          times: parseInt(multMatch[1],10),
          known: parseInt(multMatch[2],10),
          rawText: text
        };
      }

      // Try word-problem form: pick first small integer near "times" + miles number near "miles"
      // Example: "about 6 times ... about 600 miles ..."
      const timesMatch = text.match(/(\d+)\s+times\b/i);
      const milesMatch = text.match(/(\d[\d,]*)\s+miles\b/i);

      if(timesMatch && milesMatch){
        const times = parseInt(timesMatch[1],10);
        const known = parseInt(milesMatch[1].replace(/,/g,""),10);

        // If var not given, default to g (common in the example)
        const v2 = (varName || "g");
        return { varName: v2, times, known, rawText: text };
      }

      // fallback: search any two numbers (times, known)
      const nums = (text.match(/\d[\d,]*/g) || []).map(s=> parseInt(s.replace(/,/g,""),10)).filter(n=>Number.isFinite(n));
      if(nums.length >= 2){
        return { varName: (varName || "g"), times: nums[0], known: nums[1], rawText: text };
      }

      return null;
    }

    // ---------- State ----------
    const state = {
      varName: "g",
      times: null,
      known: null,
      product: null,
      rawText: "",
      hints: {1:0,2:0,3:0,4:0},
      revealed: {1:false,2:false,3:false,4:false},
      usedLowMode: false
    };

    function setHint(step){
      state.hints[step] += 1;
      $("hint"+step).textContent = "Hints used: " + state.hints[step];
    }
    function clearFeedback(step){
      $("fb"+step).innerHTML = "";
      $("rev"+step).innerHTML = "";
    }
    function showFeedback(step, kind, msg){
      const div = document.createElement("div");
      div.className = "feedback " + kind;
      div.textContent = msg;
      $("fb"+step).innerHTML = "";
      $("fb"+step).appendChild(div);
    }
    function showReveal(step, answerText, reasonText){
      setHint(step);
      state.revealed[step] = true;
      const div = document.createElement("div");
      div.className = "reveal";
      div.innerHTML = "<b>Answer:</b> " + answerText +
        "<br><span class='muted'>Reason: " + reasonText + "</span>";
      $("rev"+step).innerHTML = "";
      $("rev"+step).appendChild(div);
    }

    function updateLabels(){
      const v = state.varName || "g";
      $("varLabel").textContent = v;
      $("varLabel2").textContent = v;
      $("varLabel3").textContent = v;

      if(state.times !== null && state.known !== null){
        $("eqLabel").textContent = `${v} = ${state.times} √ó ${state.known}`;
        $("timesLabel").textContent = String(state.times);
        $("knownMilesLabel").textContent = comma(state.known);
        $("exampleLabel").textContent = `Example: ${v} = ${state.times} √ó ${state.known} ‚Üí ${v} = ${comma(state.product)} miles`;
      }else{
        $("eqLabel").textContent = `${v} = ‚Äî`;
        $("timesLabel").textContent = "‚Äî";
        $("knownMilesLabel").textContent = "‚Äî";
      }
    }

    function updateSnippets(){
      // Keep snippets tight and obvious (as requested)
      // If the pasted text contains a question line, we use a generic ‚Äúhow many miles long is the Ganobi River?‚Äù fallback.
      $("snipFind").textContent = "about how many miles long is the Ganobi River?";
      $("snipKnow").textContent = "If the Beecher River is about 600 miles long‚Ä¶";
      $("snipRel").textContent = "The Ganobi River is about 6 times the length of the Beecher River. Let g be the length of the Ganobi River.";
    }

    function updateProblemUI(){
      $("bigProblem").textContent = state.rawText ? state.rawText : "‚Äî";
      if(state.times === null || state.known === null){
        $("parseNote").textContent = "Tip: Paste the story or type: g = 6√ó600";
      }else{
        $("parseNote").textContent = `Read ‚Üí Equation ‚Üí Solve. Detected: ${state.varName} = ${state.times} √ó ${state.known}`;
      }
      updateLabels();
      buildLowModeChoices();
    }

    function resetSteps(){
      $("s1a").value = "";
      $("s1b").value = "";
      $("s1c").value = "";
      $("s2left").value = "";
      $("s2right").value = "";
      $("s3").value = "";
      $("s4").value = "";

      [1,2,3,4].forEach(step=>{
        clearFeedback(step);
        state.hints[step] = 0;
        state.revealed[step] = false;
        $("hint"+step).textContent = "Hints used: 0";
      });

      $("summaryOut").textContent = "Summary will appear here.";
      $("copyNote").textContent = "";
    }

    // ---------- CHILL MODE choices ----------
    function buildLowModeChoices(){
      const on = $("lowMode").checked && state.times !== null;
      state.usedLowMode = on;

      const s1a = $("s1aChoices"), s1b = $("s1bChoices"), s1c = $("s1cChoices"),
            s2 = $("s2Choices"), s3 = $("s3Choices"), s4 = $("s4Choices");
      [s1a,s1b,s1c,s2,s3,s4].forEach(el=>{
        el.innerHTML = "";
        el.style.display = on ? "flex" : "none";
      });
      if(!on) return;

      const v = state.varName || "g";
      const correctG = "g"; // in this story, the unknown is g (Ganobi). We keep it stable.

      // Step 1A: what are we finding?
      [
        {label:`the length of the Ganobi River (${v})`, val:"g"},
        {label:`the length of the Beecher River`, val:"b"}
      ].forEach(o=>{
        const b = document.createElement("button");
        b.className="choice"; b.type="button"; b.textContent=o.label;
        b.onclick = ()=> $("s1a").value = o.val;
        s1a.appendChild(b);
      });

      // Step 1B: which length do we know?
      [
        {label:`${comma(state.known)} miles (Beecher River)`, val:"600"},
        {label:`${state.times} miles`, val:"6"}
      ].forEach(o=>{
        const b = document.createElement("button");
        b.className="choice"; b.type="button"; b.textContent=o.label;
        b.onclick = ()=> $("s1b").value = o.val;
        s1b.appendChild(b);
      });

      // Step 1C: relationship
      [
        {label:`${v} is ${state.times} times ${comma(state.known)} ‚Üí multiply`, val:"times"},
        {label:`${v} is ${state.times} more than ${comma(state.known)} ‚Üí add`, val:"more"}
      ].forEach(o=>{
        const b = document.createElement("button");
        b.className="choice"; b.type="button"; b.textContent=o.label;
        b.onclick = ()=> $("s1c").value = o.val;
        s1c.appendChild(b);
      });

      // Step 2: equation factors
      [
        {label:`${state.times}`, fill:()=>{$("s2left").value = String(state.times);} },
        {label:`${comma(state.known)}`, fill:()=>{$("s2right").value = String(state.known);} }
      ].forEach(o=>{
        const b = document.createElement("button");
        b.className="choice"; b.type="button"; b.textContent=o.label;
        b.onclick = o.fill;
        s2.appendChild(b);
      });

      // Step 3: solve choice
      const correct = state.product;
      const wrong = state.known; // common slip
      [
        {label:`${comma(correct)}`, val:correct},
        {label:`${comma(wrong)}`, val:wrong}
      ].forEach(o=>{
        const b = document.createElement("button");
        b.className="choice"; b.type="button"; b.textContent=o.label;
        b.onclick = ()=> $("s3").value = String(o.val);
        s3.appendChild(b);
      });

      // Step 4: sentence starter
      [
        {label:`The Ganobi River is about ${comma(correct)} miles long.`, val:`The Ganobi River is about ${comma(correct)} miles long.`},
        {label:`The Ganobi River is about ${comma(wrong)} miles long.`, val:`The Ganobi River is about ${comma(wrong)} miles long.`}
      ].forEach(o=>{
        const b = document.createElement("button");
        b.className="choice"; b.type="button"; b.textContent=o.label;
        b.onclick = ()=> $("s4").value = o.val;
        s4.appendChild(b);
      });
    }

    // ---------- Step checks ----------
    function checkStep1(){
      clearFeedback(1);
      if(state.times === null){
        showFeedback(1,"warn","Use the problem first.");
        return;
      }
      const a = $("s1a").value;
      const b = $("s1b").value;
      const c = $("s1c").value;

      if(!a || !b || !c){
        showFeedback(1,"warn","Answer all 3 questions in Step 1.");
        return;
      }

      const okA = (a === "g");
      const okB = (b === "600"); // we store as label; check by meaning below too
      const okC = (c === "times");

      // Meaning-based check for B: compare known value
      const bIsKnown = (b === "600"); // UI values fixed; keep consistent

      if(okA && bIsKnown && okC){
        showFeedback(1,"ok","Yes ‚Äî you found the unknown (g), the known length (600 miles), and the word ‚Äútimes‚Äù (multiply).");
      }else{
        const msgs = [];
        if(!okA) msgs.push("We are trying to find the length of the Ganobi River (g).");
        if(!bIsKnown) msgs.push("The known length is 600 miles (Beecher River).");
        if(!okC) msgs.push("‚Äútimes‚Äù means multiply.");
        showFeedback(1,"bad",msgs.join(" "));
      }
    }

    function showStep1(){
      if(state.times === null) return;
      const v = state.varName || "g";
      showReveal(1,
        `Find: length of Ganobi River (${v}) ‚Ä¢ Known: ${comma(state.known)} miles ‚Ä¢ ‚Äú${state.times} times‚Äù ‚Üí multiply`,
        `The question asks for Ganobi. The story gives Beecher = ${comma(state.known)} miles. ‚Äútimes‚Äù tells the operation.`
      );
      $("s1a").value = "g";
      $("s1b").value = "600";
      $("s1c").value = "times";
    }

    function checkStep2(){
      clearFeedback(2);
      if(state.times === null){
        showFeedback(2,"warn","Use the problem first.");
        return;
      }
      const left = asInt($("s2left").value);
      const right = asInt($("s2right").value);
      if(left === null || right === null){
        showFeedback(2,"warn","Fill in both factors.");
        return;
      }
      const ok = (left === state.times && right === state.known) || (left === state.known && right === state.times);
      if(ok){
        showFeedback(2,"ok",`Yes ‚Äî your equation matches the story: ${state.varName} = ${left} √ó ${right}.`);
      }else{
        showFeedback(2,"bad",`Not quite ‚Äî the equation should use the two numbers from the story: ${state.varName} = ${state.times} √ó ${state.known}.`);
      }
    }

    function showStep2(){
      if(state.times === null) return;
      showReveal(2,
        `${state.varName} = ${state.times} √ó ${state.known}`,
        `‚Äú${state.times} times‚Äù means multiply the known length ${comma(state.known)}.`
      );
      $("s2left").value = String(state.times);
      $("s2right").value = String(state.known);
    }

    function checkStep3(){
      clearFeedback(3);
      if(state.times === null){
        showFeedback(3,"warn","Use the problem first.");
        return;
      }
      const v = asInt($("s3").value);
      if(v === null){
        showFeedback(3,"warn",`Type the value of ${state.varName}.`);
        return;
      }
      if(v === state.product){
        showFeedback(3,"ok",`Yes ‚Äî ${state.times} √ó ${state.known} = ${comma(state.product)}.`);
      }else{
        showFeedback(3,"bad",`Not quite ‚Äî ${state.times} √ó ${state.known} = ${comma(state.product)}.`);
      }
    }

    function showStep3(){
      if(state.times === null) return;
      showReveal(3,
        `${state.varName} = ${comma(state.product)}`,
        `Multiply to solve: ${state.times} √ó ${comma(state.known)} = ${comma(state.product)}.`
      );
      $("s3").value = String(state.product);
    }

    function checkStep4(){
      clearFeedback(4);
      if(state.times === null){
        showFeedback(4,"warn","Use the problem first.");
        return;
      }
      const s = norm($("s4").value);
      if(!s){
        showFeedback(4,"warn","Write a sentence with miles.");
        return;
      }
      const hasMiles = /miles/i.test(s);
      const hasNumber = String(state.product).split("").some(ch => s.includes(ch)) || s.includes(comma(state.product));
      const longerReasonable = state.product > state.known;

      if(hasMiles && hasNumber && longerReasonable){
        showFeedback(4,"ok","Nice ‚Äî you labeled miles and your answer is bigger than 600, which matches ‚Äútimes.‚Äù");
      }else{
        const msgs = [];
        if(!hasMiles) msgs.push("Include the unit ‚Äúmiles.‚Äù");
        if(!hasNumber) msgs.push(`Include the value ${comma(state.product)}.`);
        if(!longerReasonable) msgs.push("Because it is ‚Äútimes,‚Äù the answer should be longer than the known length.");
        showFeedback(4,"bad",msgs.join(" "));
      }
    }

    function showStep4(){
      if(state.times === null) return;
      const sentence = `The Ganobi River is about ${comma(state.product)} miles long.`;
      showReveal(4, sentence, `We solved ${state.varName} = ${state.times} √ó ${comma(state.known)} and then labeled miles.`);
      $("s4").value = sentence;
    }

    // ---------- Summary ----------
    function makeSummary(){
      if(state.times === null){
        return "Problem: ‚Äî\nUse the problem first.";
      }
      const hintsUsedSteps = Object.entries(state.hints)
        .filter(([,n])=>n>0)
        .map(([k,n])=>`Step ${k} (${n})`)
        .join(", ") || "None";

      return [
        `Problem (word problem):`,
        state.rawText || "‚Äî",
        ``,
        `Strategy: Write and Solve an Equation (Word Problem)`,
        ``,
        `Known number: ${comma(state.known)} miles`,
        `Multiplier: ${state.times} times`,
        `Equation: ${state.varName} = ${state.times} √ó ${state.known}`,
        `Solution: ${state.varName} = ${comma(state.product)}`,
        `Answer: ${comma(state.product)} miles`,
        ``,
        `Hints used: ${hintsUsedSteps}`
      ].join("\n");
    }

    $("summaryBtn").addEventListener("click", ()=>{
      $("summaryOut").textContent = makeSummary();
    });

    $("copyBtn").addEventListener("click", async ()=>{
      try{
        await navigator.clipboard.writeText($("summaryOut").textContent);
        $("copyNote").textContent = "Copied.";
        setTimeout(()=> $("copyNote").textContent = "", 1200);
      }catch(e){
        $("copyNote").textContent = "Copy not available in this browser.";
        setTimeout(()=> $("copyNote").textContent = "", 1600);
      }
    });

    // ---------- Bind buttons ----------
    $("check1").onclick = checkStep1;
    $("check2").onclick = checkStep2;
    $("check3").onclick = checkStep3;
    $("check4").onclick = checkStep4;

    $("show1").onclick = showStep1;
    $("show2").onclick = showStep2;
    $("show3").onclick = showStep3;
    $("show4").onclick = showStep4;

    $("resetBtn").onclick = resetSteps;
    $("lowMode").addEventListener("change", buildLowModeChoices);

    $("useProblemBtn").onclick = ()=>{
      const parsed = parseEquationWordProblem($("problemInput").value);
      if(!parsed){
        $("parseNote").textContent = "Couldn‚Äôt read that. Paste the story OR type: g = 6√ó600";
        state.times = null; state.known = null; state.product = null;
        state.rawText = norm($("problemInput").value);
        updateProblemUI();
        resetSteps();
        return;
      }

      state.varName = (parsed.varName || "g").toLowerCase();
      state.times = parsed.times;
      state.known = parsed.known;
      state.product = state.times * state.known;
      state.rawText = parsed.rawText;

      updateSnippets();      // keep the paired-question snippets stable
      updateProblemUI();
      resetSteps();
    };

    /* =========================
       ADD-ON JS: mood + needs + report + print
       (exact block you provided)
       ========================= */
    const reg = {
      mood: null, // {row:1..5, col:1..5}
      face: null, // emoji
      need: null // string
    };

    function moodColor(row, col){
      // 5x5: top rows = higher intensity, left cols = "harder" valence.
      // Simple gradient without naming colors explicitly to keep it minimal and stable.
      // We'll compute HSL-ish via rgb interpolation (cool -> warm).
      const r = row; // 1..5 bottom->top is handled by construction
      const c = col; // 1..5 left->right
      // Map to 0..1
      const tRow = (r-1)/4; // intensity
      const tCol = (c-1)/4; // valence
      // Blend: left=blue-ish, right=green-ish, top adds red warmth.
      const red = Math.round( 40 + 150*tRow + 20*(1-tCol) );
      const green = Math.round( 70 + 140*tCol + 20*(1-tRow) );
      const blue = Math.round( 180 - 120*tCol + 20*(1-tRow) );
      return `rgb(${red},${green},${blue})`;
    }

    function buildMoodGrid(){
      const grid = $("moodGrid");
      grid.innerHTML = "";

      // row 5 at top, row 1 at bottom (like your image)
      for(let displayRow=5; displayRow>=1; displayRow--){
        for(let col=1; col<=5; col++){
          const cell = document.createElement("div");
          cell.className = "cell";
          cell.style.background = moodColor(displayRow, col);
          cell.setAttribute("role","gridcell");
          cell.setAttribute("tabindex","0");
          cell.dataset.row = String(displayRow);
          cell.dataset.col = String(col);
          cell.onclick = ()=> selectMood(displayRow, col);
          cell.onkeydown = (e)=>{
            if(e.key === "Enter" || e.key === " "){
              e.preventDefault();
              selectMood(displayRow, col);
            }
          };
          grid.appendChild(cell);
        }
      }
    }

    function selectMood(row, col){
      reg.mood = {row, col};
      // clear selection
      Array.from(document.querySelectorAll(".cell.selected")).forEach(el=> el.classList.remove("selected"));
      // find matching cell
      const match = document.querySelector(`.cell[data-row="${row}"][data-col="${col}"]`);
      if(match) match.classList.add("selected");
      updateMoodReadout();
    }

    function updateMoodReadout(){
      const parts = [];
      if(reg.mood) parts.push(`grid ${reg.mood.row}/${reg.mood.col}`);
      if(reg.face) parts.push(`face ${reg.face}`);
      $("moodReadout").textContent = "Selected: " + (parts.length ? parts.join(" ‚Ä¢ ") : "‚Äî");
    }

    function bindFaces(){
      Array.from(document.querySelectorAll(".faceBtn")).forEach(btn=>{
        btn.onclick = ()=>{
          Array.from(document.querySelectorAll(".faceBtn.selected")).forEach(b=> b.classList.remove("selected"));
          btn.classList.add("selected");
          reg.face = btn.dataset.face || null;
          updateMoodReadout();
        };
      });
    }

    function bindNeeds(){
      Array.from(document.querySelectorAll(".needBtn")).forEach(btn=>{
        btn.onclick = ()=>{
          const already = btn.classList.contains("selected");
          Array.from(document.querySelectorAll(".needBtn.selected")).forEach(b=> b.classList.remove("selected"));
          if(already){
            reg.need = null;
          }else{
            btn.classList.add("selected");
            reg.need = btn.dataset.need || null;
          }
          $("needReadout").textContent = "Selected: " + (reg.need ?? "‚Äî");
        };
      });
    }

    function makeReport(){
      const base = makeSummary();

      const reflection = $("reflectionPick").value || "‚Äî";
      const myStrats = norm($("myStrategies").value) || "‚Äî";
      const teacherQ = norm($("teacherQ").value) || "‚Äî";

      const moodPart = (()=>{
        const parts = [];
        if(reg.mood) parts.push(`Mood grid: ${reg.mood.row}/${reg.mood.col}`);
        if(reg.face) parts.push(`Face: ${reg.face}`);
        return parts.length ? parts.join(" | ") : "‚Äî";
      })();

      const needPart = reg.need ?? "‚Äî";

      return [
        base,
        "",
        "=== Check-In ===",
        `Feeling: ${moodPart}`,
        `Need: ${needPart}`,
        `My strategies: ${myStrats}`,
        "",
        "=== Reflection ===",
        `Today: ${reflection}`,
        "",
        "=== Question to teacher ===",
        teacherQ
      ].join("\n");
    }

    $("reportBtn").addEventListener("click", ()=>{
      $("reportOut").textContent = makeReport();
      $("printNote").textContent = "Report ready.";
      setTimeout(()=> $("printNote").textContent = "", 1200);
    });

    $("printBtn").addEventListener("click", ()=>{
      // Ensure report is current before printing
      $("reportOut").textContent = makeReport();
      window.print(); // user can "Save as PDF" from print dialog
    });

    // Init add-on UI
    buildMoodGrid();
    bindFaces();
    bindNeeds();
    $("needReadout").textContent = "Selected: ‚Äî";
    updateMoodReadout();

    // Default example
    $("problemInput").value =
`The Ganobi River is about 6 times the length of the Beecher River.
If the Beecher River is about 600 miles long, about how many miles long is the Ganobi River?
Let g be the length of the Ganobi River. Write and solve an equation.`;
    $("useProblemBtn").click();
  </script>
</body>
</html>

